
{% extends "layout.html.twig" %}

{% set pageTitle = 'Ajouter un article' %}

{% block body %}
<form action="?action=addPost" method="post" class="my-4">
    <div class="form-floating mb-3">
        <input class="form-control" type="text" name="title" id="title" placeholder="titre">
        <label for="title">Titre</label>
    </div>
    <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Introduction" name="introduction" id="introduction"></textarea>
        <label for="introduction">Introduction</label>
    </div>
    <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Contenu" name="content" id="content" style="height: 200px"></textarea>
        <label for="content">Contenu</label>
    </div>
    <div>
        <input class="btn btn-primary" type="submit" />
    </div>
</form>
{% endblock %}
